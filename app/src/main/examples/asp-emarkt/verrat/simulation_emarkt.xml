<simulation-configuration>
	<name>E-Markt Szenario Verrrat</name>
	<category>scm/mates</category>
	<behavior>com.github.angerona.fw.def.DefaultBehavior</behavior>
	
	<agent-instance>
		<name>Kaeufer</name>
        
        	<agent-config source="config/agents/know_mates_bene.xml" />
        	<beliefbase-config source="config/beliefbases/asp_mates_beliefbase.xml" />

	      	<desire>v_Verkaeufer(menge(5), 1)</desire>
		<desire>q_Verkaeufer(startAngebot(X),2)</desire>
		<desire>q_Verkaeufer(liefertermin(2), 3)</desire>
		<desire>q_Verkaeufer(liefertermin(1), 4)</desire>

		<desire>kaufeWare</desire>
		<desire>billigerPreis</desire>
		
		<data key="Confidential">
		(Verkaufer, __DEFAULT__, maxPreis(40))
		</data>

		<data key="KnowHow">
		kaufeWare, s_Inform(a_Verkaeufer, q_kaufen(X)), kaufen_trigger
		billigerPreis, s_Inform(a_Verkaeufer, q_kaufangebot(X)), kaufangebot_trigger
		</data>
	
		<capability>Inform</capability>
        	<capability>Query</capability>
        	<capability>Answer</capability>
	</agent-instance>
      
	<agent-instance>
      		<name>Verkaeufer</name>
      	
        	<agent-config source="config/agents/know_mates_bene.xml" />         
		<beliefbase-config source="config/beliefbases/asp_mates_beliefbase.xml" />

		<desire>verkaufeWare</desire>
		<desire>informliefertermin</desire>

		<data key="Confidential">
		(Kaeufer, __DEFAULT__, volleLager)
		(Kaeufer, __DEFAULT__, minPreis(30))
		</data>

		<data key="KnowHow">
		verkaufeWare, s_Inform(a_Kaeufer, q_akzeptiertesKaufangebot(X)), akzeptiertesKaufangebot_trigger
<!--		informliefertermin, s_Inform(a_Kaeufer, q_liefertermin(X)), liefertermin_trigger -->
		</data>

		<capability>Inform</capability>
		<capability>Query</capability>
      		<capability>Answer</capability>
	</agent-instance>
</simulation-configuration>
