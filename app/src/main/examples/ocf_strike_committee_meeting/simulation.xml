<simulation-configuration>
	<name>Strike Committee Meeting (OCF)</name>
	<category>scm/ocf</category>
    <behavior>angerona.fw.def.DefaultBehavior</behavior>
	
	<agent-instance>
		<name>Employee</name>
        
        
        <agent-config source="config/agents/default_agent.xml" />
        <beliefbase-config source="config/beliefbases/ocf_beliefbase.xml" />
        
        <desire>attend_scm</desire>
        <desire>scriptingProcessing</desire>
        <script>
        	<query type="Query">
        		<sender>Employee</sender>
        		<receiver>Boss</receiver>
        		<question>excuse</question>
        	</query>
        </script>
        <script>
        	<revision type="Revision">
        		<sender>Employee</sender>
        		<receiver>Boss</receiver>
        		<proposition>medical_appointment</proposition>
        	</revision>
        </script>
        <script>
        	<query type="Query">
        		<sender>Employee</sender>
        		<receiver>Boss</receiver>
        		<question>excuse</question>
        	</query>
        </script>
        
        <capability>Inform</capability>
        <capability>Answer</capability>
        
        <data key="Confidential">
            (Boss, __DEFAULT__, attend_scm)
        </data>
	</agent-instance>
      
	<agent-instance>
      	<name>Boss</name>
      	
      	
      	<agent-config source="config/agents/default_agent.xml" />
        <beliefbase-config source="config/beliefbases/ocf_beliefbase.xml" />
      	
      	<capability>Query</capability>
	</agent-instance>
</simulation-configuration>
