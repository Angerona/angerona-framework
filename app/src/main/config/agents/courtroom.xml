<agent-configuration>
	<name>Courtroom Agent Implementation</name>
	<cycle-script source="config/secrecy_cycle.xml" />

	<operation-set operation-type="GenerateOptions">
      <default-operator-cls>angerona.fw.example.operators.GenerateOptionsOperator</default-operator-cls>
   	</operation-set>
	
	<operation-set operation-type="IntentionUpdate">
      <default-operator-cls>angerona.fw.example.operators.courtroom.CourtroomIntentionUpdate</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="SubgoalGeneration">
      <default-operator-cls>angerona.fw.example.operators.courtroom.CourtroomPlanner</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="UpdateBeliefs">
      <default-operator-cls>angerona.fw.example.operators.UpdateBeliefsOperator</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="Violates">
      <default-operator-cls>angerona.fw.example.operators.courtroom.CourtroomViolates</default-operator-cls>
   	</operation-set>
	
	<component>angerona.fw.logic.Desires</component>
	<component>angerona.fw.am.secrecy.components.SecrecyKnowledge</component>
	<component>angerona.fw.PlanComponent</component>	
	<component>angerona.fw.example.components.CommunicationHistory</component>
</agent-configuration>
