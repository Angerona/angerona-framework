<agent-configuration>
	<name>Island Engineer</name>
	<cycle-script source="config/island_cycle.xml" />
	
	<operation-set operation-type="GenerateOptions">
      <default-operator-cls>com.github.kreaturesfw.island.operators.IslandOptionsOperator</default-operator-cls>
   	</operation-set>
	
	<operation-set operation-type="IntentionUpdate">
      <default-operator-cls>com.github.kreaturesfw.island.operators.IslandFilterOperator</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="SubgoalGeneration">
      <default-operator-cls>com.github.kreaturesfw.island.operators.IslandPlanningOperator</default-operator-cls>
   	</operation-set>
	
	<operation-set operation-type="Execute">
      <default-operator-cls>com.github.kreaturesfw.simple.operators.IslandExecuteOperator</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="UpdateBeliefs">
      <default-operator-cls>com.github.kreaturesfw.island.beliefbase.IslandUpdateBeliefsOperator</default-operator-cls>
   	</operation-set>
   	   	
	<component>com.github.kreaturesfw.core.logic.Desires</component>
	<component>com.github.kreaturesfw.core.legancy.PlanComponent</component>
	<component>com.github.kreaturesfw.island.components.Area</component>
	<component>com.github.kreaturesfw.island.components.Battery</component>
	
</agent-configuration>
