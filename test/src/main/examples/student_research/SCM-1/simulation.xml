<simulation-configuration>
	<name>SCM-1 - Knowhow</name>
    <behavior>angerona.fw.def.DefaultBehavior</behavior>
	<agent-instance>
		<name>employee</name>
        <default-suffix>employee</default-suffix>
         
		<cycle-script source="config/secrecy_cycle.xml" />
        <agent-config source="config/agents/knowhow_agent.xml" />         
        <beliefbase-config source="config/beliefbases/asp_beliefbase.xml" />
         
        <skill>QueryAnswer</skill>
		<skill>Inform</skill>
		
        <desire>not_on_blacklist</desire>
        <desire>attend_scm</desire>
         
        <data key="Confidential">
            (boss, angerona.fw.logic.asp.AspReasoner{d=1.0}, attend_scm(employee))
        </data>
		<data key="KnowHow">
			attend_scm, excused(a_SELF), 
		 	excused(a_SELF), s_Inform(a_boss, excused(a_SELF)),
		 	answer_query, honest_answer, 
		 	answer_query, lie,
		 	honest_answer, s_QueryAnswer(p_honest),  
		 	lie, s_QueryAnswer(p_lie),
		</data>
	</agent-instance>
      
	<agent-instance>
      	<name>boss</name>
      	<default-suffix>boss</default-suffix>
      	
      	<cycle-script source="config/secrecy_cycle.xml" />
        <agent-config source="config/agents/knowhow_agent.xml" />         
        <beliefbase-config source="config/beliefbases/asp_beliefbase.xml" />
         
      	<skill>Query</skill>
        
        <data key="KnowHow">
			not_sure(excused(employee)), s_Query(a_employee, attend_scm(employee)), 
		</data> 
		
	</agent-instance>
</simulation-configuration>
