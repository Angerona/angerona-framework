<simulation-configuration>
	<name>Strike Committee Meeting (Dummy Logic)</name>
	<behavior>angerona.fw.DefaultBehavior</behavior>
	<agent-instance>
		<name>Employee</name>
		<default-suffix>employee</default-suffix>
	
        <config class="angerona.fw.serialize.AgentConfigImport">
			<source>config/agents/default_agent.xml</source>
        </config>
    
        <beliefbase-config class="angerona.fw.serialize.BeliefbaseConfigImport">
            <source>config/beliefbases/dummy_beliefbase.xml</source>
        </beliefbase-config>
		
		<data key="Confidential">(Boss, __DEFAULT__, attend_scm)</data>
	</agent-instance>
	
	<agent-instance>
		<name>Boss</name>
		<default-suffix>boss</default-suffix>
	
        <config class="angerona.fw.serialize.AgentConfigImport">
			<source>config/agents/default_agent.xml</source>
        </config>
    
        <beliefbase-config class="angerona.fw.serialize.BeliefbaseConfigImport">
            <source>config/beliefbases/dummy_beliefbase.xml</source>
        </beliefbase-config>
	</agent-instance>
	
	<perception class="angerona.fw.comm.Query">
      <sender>Boss</sender>
      <receiver>Employee</receiver>
      <question>attend_scm</question>
   	</perception>
   	
</simulation-configuration>