<AngeronaSimulation name="Strike committee meeting">
	<Agent 	name="Employee"
		configuration="config/agents/default_agent.xml" >
		<Skill file="config/skills/QueryAnswer.xml" />
		<Beliefbase	fileSuffix="employee"
					configuration="config/beliefbases/dummy_beliefbase.xml" />
					
		<AdditionalData>
			<Confidential>
			(Boss, attend_scm, {true})
			</Confidential>
		</AdditionalData>
		
	</Agent>
	
	<Agent 	name="Boss" 
		configuration="config/agents/default_agent.xml" >
		<Beliefbase	fileSuffix="boss"
					configuration="config/beliefbases/dummy_beliefbase.xml" />	
	</Agent>

	<Flow>
		<Query sender="Boss" receiver="Employee" question="attends" />
		<Query sender="Boss" receiver="Employee" question="has_time" /> 
	</Flow>
</AngeronaSimulation>
