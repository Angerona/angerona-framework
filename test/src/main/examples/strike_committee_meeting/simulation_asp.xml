<simulation-configuration>
	<name>Strike Committee Meeting (ASP)</name>
    <behavior>angerona.fw.def.DefaultBehavior</behavior>
	<agent-instance>
		<name>Employee</name>
        <default-suffix>employee</default-suffix>
         
        <config>
			<source>config/agents/default_agent.xml</source>
        </config>
         
        <beliefbase-config>
			<source>config/beliefbases/asp_beliefbase.xml</source>
        </beliefbase-config>
        
        <desire>v_Boss(ask_for_excuse)</desire>
        <desire>attend_scm</desire>
        
        <skill>Inform</skill>
        <skill>Answer</skill>
        
        <data key="Confidential">
            (Boss, angerona.fw.logic.asp.AspReasoner{d=1}, attend_scm)
        </data>
	</agent-instance>
      
	<agent-instance>
      	<name>Boss</name>
      	<default-suffix>boss</default-suffix>
      	
      	<config>
      		<source>config/agents/default_agent.xml</source>
      	</config>
      	
      	<skill>Query</skill>
      	
      	<beliefbase-config>
            <source>config/beliefbases/asp_beliefbase.xml</source>
         </beliefbase-config>
         
	</agent-instance>
</simulation-configuration>
