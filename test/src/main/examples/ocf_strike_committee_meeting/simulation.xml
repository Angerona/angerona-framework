<simulation-configuration>
	<name>Strike Committee Meeting (OCF)</name>
	<category>scm/ocf</category>
    <behavior>angerona.fw.def.DefaultBehavior</behavior>
	
	<agent-instance>
		<name>Employee</name>
        <beliefbase-name>employee</beliefbase-name>
        
        <agent-config source="config/agents/default_agent.xml" />
        <beliefbase-config source="config/beliefbases/ocf_beliefbase.xml" />
        
        <desire>v_Boss(ask_for_excuse)</desire>
        <desire>attend_scm</desire>
        
        <skill>Inform</skill>
        <skill>Answer</skill>
        
        <data key="Confidential">
            (Boss, __DEFAULT__, attend_scm)
        </data>
	</agent-instance>
      
	<agent-instance>
      	<name>Boss</name>
      	<beliefbase-name>boss</beliefbase-name>
      	
      	<agent-config source="config/agents/default_agent.xml" />
        <beliefbase-config source="config/beliefbases/ocf_beliefbase.xml" />
      	
      	<skill>Query</skill>
	</agent-instance>
</simulation-configuration>
