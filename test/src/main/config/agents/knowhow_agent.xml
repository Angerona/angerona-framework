<agent-configuration>
	<name>Knowhow Agent Implementation (safe)</name>
	<cycle-script source="config/secrecy_cycle.xml" />
	
	<operation-set operation-type="GenerateOptions">
      <default-operator-cls>angerona.fw.operators.def.GenerateOptionsOperator</default-operator-cls>
   	</operation-set>
	
	<operation-set operation-type="IntentionUpdate">
      <default-operator-cls>angerona.fw.operators.def.IntentionUpdateOperator{allowUnsafe=true}</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="SubgoalGeneration">
      <default-operator-cls>angerona.fw.knowhow.KnowhowSubgoal{allowUnsafe=false}</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="UpdateBeliefs">
      <default-operator-cls>angerona.fw.operators.def.UpdateBeliefsOperator</default-operator-cls>
   	</operation-set>
   	
	<operation-set operation-type="Violates">
      <default-operator-cls>angerona.fw.operators.def.ViolatesOperator</default-operator-cls>
   	</operation-set>
	
	<component>angerona.fw.logic.Desires</component>
	<component>angerona.fw.knowhow.KnowhowBase</component>
	<component>angerona.fw.PlanComponent</component>
	<component>angerona.fw.logic.SecrecyKnowledge</component>
</agent-configuration>

